Sub ImportTuitionTables_AllOnOneSheet()
    Dim ws As Worksheet
    Dim qt As QueryTable
    Dim rngStart As Range
    Dim startRow As Long
    Dim url As String
    Dim i As Long
    
    url = "https://www.frontrange.edu/admissions-aid/paying-for-college/tuition-fees/tuition-rates.html"
    
    ' Create or clear the TuitionData sheet
    On Error Resume Next
    Set ws = ThisWorkbook.Sheets("TuitionData")
    If ws Is Nothing Then
        Set ws = ThisWorkbook.Sheets.Add
        ws.Name = "TuitionData"
    Else
        ws.Cells.Clear
    End If
    On Error GoTo 0
    
    Set rngStart = ws.Range("A1")
    
    ' Pull the entire page
    Set qt = ws.QueryTables.Add(Connection:="URL;" & url, Destination:=rngStart)
    With qt
        .WebSelectionType = xlEntirePage
        .WebFormatting = xlWebFormattingAll
        .Refresh BackgroundQuery:=False
        .Delete
    End With

    ' Optional: Add a line between tables if needed or reformat
    MsgBox "Tuition tables imported successfully. You may need to separate them manually based on headers.", vbInformation
End Sub
